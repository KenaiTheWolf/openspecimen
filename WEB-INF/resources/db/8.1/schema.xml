  <changeSet author="vpawar" id="Function based index on staged participants EMPI" dbms="oracle">
    <createIndex tableName="OS_STAGED_PARTICIPANTS" indexName="STAGED_LOWER_EMPI_IDX">
      <column name="lower(EMPI_ID)"/>
